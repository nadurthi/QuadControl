#include <iostream>
using namespace std;
#include "udpPort.h"
int main() {
	udpPort SendUDP;


	char address[30]="192.168.1.142";
	SendUDP.OpenPort_write(address,1234);

	char txbuffer[50]="Send Data";
int i=0;
	while(1){
		snprintf(txbuffer,50,"Send = %d",i++);
		cout<<"Sending = "<<txbuffer<<endl;
	SendUDP.write(txbuffer,50);

	usleep(100000);

	}

	return 0;
}
