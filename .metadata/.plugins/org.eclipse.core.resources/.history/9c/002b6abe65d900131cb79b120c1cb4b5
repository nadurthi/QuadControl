#ifndef UDPPORT_H_
#define UDPPORT_H_

#include "stdio.h"
#include "stdlib.h"
#include <unistd.h>
#include <strings.h>
#include "sys/types.h"
#include "sys/socket.h"
#include "netinet/in.h"
#include "netdb.h"
#include <string>

class udpPort
{
private:
	int sockfd;
	int fd;
	struct sockaddr_in UDPserveraddr;
	struct sockaddr_in clientaddr;
	char buffer[1024];
	struct timespec timeOUT;
	fd_set fds;


public:
	udpPort();
	bool OpenPort(int port);
	bool ClosePort();
	int CheckData();
	std::string ReadPort();
	bool wirte(std::string Msg);
	bool begin();
};

#endif



