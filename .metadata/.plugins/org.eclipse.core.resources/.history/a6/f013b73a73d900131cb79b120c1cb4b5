#include <iostream>
using namespace std;
#include "udpPort.h"
int main() {
	udpPort SendUDP;

	SendUDP.OpenPort_write("192.168.1.142",1234);

	while(1){
	SendUDP.write("Send Data",9);

	usleep(1000000);

	}

	return 0;
}
