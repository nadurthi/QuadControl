#include <iostream>
using namespace std;
#include "udpPort.h"
int main() {
	udpPort TxUDP,RxUDP;


	char addressTx[30]="10.0.0.3";
	TxUDP.OpenPort_write(addressTx,1234);

	char txbuffer[100]="Send Data";
int i=0;
	while(1){
		snprintf(txbuffer,100,"Send = %d\n",i++);
		cout<<"Sending = "<<txbuffer<<endl;
	SendUDP.write(txbuffer,100);

	usleep(10000);

	}

	return 0;
}
