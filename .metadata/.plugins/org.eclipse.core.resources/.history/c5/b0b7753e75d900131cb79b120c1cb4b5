#include <iostream>
using namespace std;
#include "udpPort.h"
int main() {
	udpPort SendUDP;


	char address[30]="192.168.1.142";
	SendUDP.OpenPort_write(address,1234);

	char txbuffer[10]="Send Data";

	while(1){
		cout<<"Sending = "<<txbuffer<<endl;
	SendUDP.write(txbuffer,9);

	usleep(1000000);

	}

	return 0;
}
