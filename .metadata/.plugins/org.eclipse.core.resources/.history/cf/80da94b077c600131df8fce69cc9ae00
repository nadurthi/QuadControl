 //%%%%%%%%%%%%%%%%%%%%%%%   States used in your estimator/controller   %%%%%%%%%%%%%%%%%%%%%%
struct QuadStateVariable {
	double t;
	double q[4],w[3],x[3],v[3],a[3],wdot[3]; //all the current filtered estimated quantities
	 double Data_AccGyro_raw[7][data_queue_length]; //stores the history of IMU measurements
	 double Data_XQ_raw[8][data_queue_length];  // stores the history of vicon measurements [time,x,y,z,q0,q1,q2,q3]
	 double Data_AccGyro_est[7][data_queue_length]; //stores the history of IMU measurements
	 double Data_XQ_est[8][data_queue_length];  // stores the history of vicon measurements [time,x,y,z,q0,q1,q2,q3]
	 double Fd[3]; //latest force thrust required
	 double ba[3],bg[3],rmis[3],qmis[4];//all the constant est parameters
	 double Maxstd_q[4],Maxstd_w[3],Maxstd_a[3],Maxstd_x[3],Maxstd_v[3],Maxstd_wdot[3];
};
