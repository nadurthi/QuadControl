#include <iostream>
using namespace std;
#include "udpPort.h"

int main() {

	udpPort RecUDP;
	RecUDP.OpenPort_read(1234);
	char rxbuffer[100];

	while(1){
	RecUDP.ReadPort(rxbuffer,10);
	cout<<rxbuffer<<endl;
	}

	return 0;
}
