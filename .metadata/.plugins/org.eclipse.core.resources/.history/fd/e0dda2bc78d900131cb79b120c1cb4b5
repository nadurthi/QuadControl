#include <iostream>
using namespace std;
#include "udpPort.h"

int main() {

	udpPort RecUDP;
	char address[30]="10.0.0.3";
	RecUDP.OpenPort_read(address,1234);
	char rxbuffer[100];
	rxbuffer[0]='1';
	while(1){
		cout<<"No. of data bytes = "<<RecUDP.CheckData()<<endl;

	RecUDP.ReadPort(rxbuffer,100);
	cout<<rxbuffer<<endl;
	}

	return 0;
}
